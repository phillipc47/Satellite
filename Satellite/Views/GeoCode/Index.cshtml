@model  Satellite.Models.GeoCode.GeoCodeViewModel

@{
    ViewBag.Title = "GeoCode Page";
}

<legend>Call To External GeoCode Service</legend>

<form class="form-horizontal" id="formSearchGeoCode" action="/GeoCode/Search" method="post">
    <fieldset>
        <div class="form-group">
            <label for="inputStreet" class="col-sm-2 control-label">Street</label>
            <div class="col-sm-10">
                <input class="form-control" id="inputStreet" placeholder="Street Address" name = "StreetAddress">
            </div>
        </div>
        <div class="form-group">
            <label for="inputCity" class="col-sm-2 control-label">City</label>
            <div class="col-sm-10">
                <input class="form-control" id="inputCity" placeholder="City" name ="City">
            </div>
        </div>
        <div class="form-group">
            <label for="inputState" class="col-sm-2 control-label">State</label>
            <div class="col-sm-10">
                <input class="form-control" id="inputState" placeholder="State" name ="State">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPostal" class="col-sm-2 control-label">Postal Code</label>
            <div class="col-sm-10">
                <input type="number" class="form-control" id="inputPostal" placeholder="Postal Code" name = "PostalCode">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <button id="btnSubmit" type="submit" class="btn btn-primary">Send <span class="glyphicon glyphicon-send" value="Search Post"></span></button>
            </div>
        </div>

        <div id="searchResultDiv"></div>
    </fieldset>
</form>

@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">
    $('#btnSubmit').click(function () {
        $("#btnSubmit").attr("disabled", "disabled").text("Searching...");
        $('#searchResultDiv').html('');
        $('#formSearchGeoCode').submit();
    });
</script>

